<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component" method="upgrade">
	<name>Shop Migrator</name>
	<author>Daniel Eliasson Stilero Webdesign http://www.stilero.com</author>
	<creationDate>2012-okt-07</creationDate>
	<copyright>Copyright (c) 2012-okt-07 Stilero Webdesign, Stilero AB. All rights reserved.</copyright>
	<authorEmail>joomla@stilero.com</authorEmail>
	<authorUrl>www.stilero.com</authorUrl>
	<version>1.0</version>
	<license>GPLv2</license>
	<description>Component for migrating webshops</description>
	<install>
            <sql>
                <file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
            </sql>
	</install>
	<uninstall>
            <sql>
                <file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
            </sql>
	</uninstall>
        <!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>shopmigrator.php</filename>
                <filename>controller.php</filename>
		<folder>models</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>views</folder>
	</files>
	<languages folder="language">
            <language tag="en-GB">site/language/en-GB.com_shopmigrator.ini</language>
            <language tag="en-GB">site/language/en-GB.com_shopmigrator.sys.ini</language>
        </languages>
	<!-- Standard plugin parameters for Joomla! 1.5 -->	
	<params addfieldpath="/plugins/content/elements">
		<param name="param_name" type="text"  default="" label="COM_SHOPMIGRATOR_PARAMNAME" description="COM_SHOPMIGRATOR_PARAMNAME_DESC"/>
		<param name="param_name2" type="radio" default="1" label="COM_SHOPMIGRATOR_PARAMNAME2" description="COM_SHOPMIGRATOR_PARAMNAME2_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
                <param name="custom_field" type="customfieldname" default="" label="COM_SHOPMIGRATOR_PARAMNAME" description="COM_SHOPMIGRATOR_PARAMNAME_DESC"/>
	</params>
	<params group="advanced" label="COM_SHOPMIGRATOR_ADVSETTINGS">
		<param name="param_name" type="text"  default="" label="COM_SHOPMIGRATOR_PARAMNAME" description="COM_SHOPMIGRATOR_PARAMNAME_DESC"/>
		<param name="param_name2" type="radio" default="1" label="COM_SHOPMIGRATOR_PARAMNAME2" description="COM_SHOPMIGRATOR_PARAMNAME2_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
                <param type="spacer" default="COM_SHOPMIGRATOR_SPACER"/>
            </params>	
	<!-- Standard plugin parameters for Joomla! 1.6+ -->
        <config>
            <fields name="params" addfieldpath="/plugins/content/shopmigrator/elements">
                    <fieldset name="settings" label="COM_SHOPMIGRATOR_SETTINGS">
                            <field name="custom_field" type="customfieldname" default="" label="COM_SHOPMIGRATOR_PARAMNAME" description="COM_SHOPMIGRATOR_PARAMNAME_DESC"/>
                            <field name="param_name" type="text"  default="" label="COM_SHOPMIGRATOR_PARAMNAME" description="COM_SHOPMIGRATOR_PARAMNAME_DESC"/>
                            <field name="param_name2" type="radio" default="1" label="COM_SHOPMIGRATOR_PARAMNAME2" description="COM_SHOPMIGRATOR_PARAMNAME2_DESC">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                            </field>
                            <field type="spacer" default="COM_SHOPMIGRATOR_SPACER"/>
                    </fieldset>
                    <fieldset name="other" label="COM_SHOPMIGRATOR_FIELDSET">
                            <field name="param_name" type="text"  default="" label="COM_SHOPMIGRATOR_PARAMNAME" description="COM_SHOPMIGRATOR_PARAMNAME_DESC"/>
                            <field name="param_name2" type="radio" default="1" label="COM_SHOPMIGRATOR_PARAMNAME2" description="COM_SHOPMIGRATOR_PARAMNAME2_DESC">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                            </field>
                            <field type="spacer" default="COM_SHOPMIGRATOR_SPACER"/>
                    </fieldset>
            </fields>
        </config>
	<administration>
            <!-- Administration Menu Section -->
           <menu img="../media/shopmigrator/images/menu1.png" link="index.php?option=com_shopmigrator">shopmigrator</menu>
           <submenu>
                <menu img="../media/shopmigrator/images/menu1.png" link="option=com_shopmigrator&amp;view=view2">Menu2</menu>
            </submenu>
            <!-- Administration Main File Copy Section -->
            <!-- Note the folder attribute: This attribute describes the folder
                    to copy FROM in the package to install therefore files copied
                    in this section are copied from /admin/ in the package -->
            <files folder="admin">
                    <!-- Admin Main File Copy Section -->
                    <filename>index.html</filename>
                    <filename>admin.shopmigrator.php</filename>
                    <filename>controller.php</filename>
                    <folder>views</folder>
                    <folder>controllers</folder>
                    <folder>helpers</folder>
                    <folder>tables</folder>
                    <folder>models</folder>
                    <!-- SQL files section -->
                    <folder>sql</folder>
            </files>
            <languages folder="language">
	       <language tag="en-GB">admin/language/en-GB.com_shopmigrator.ini</language>
               <language tag="en-GB">admin/language/en-GB.com_shopmigrator.ini</language>
	    </languages>
	</administration>
</install>