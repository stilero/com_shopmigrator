	<authorUrl>www.stilero.com</authorUrl>
	<version>1.0</version>
	<license>GPLv2</license>
	<description>COM_SHOPMIGRATOR_DESC</description>
	<install>
            <sql>
                <file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
            </sql>
	</install>
	<uninstall>
            <sql>
                <file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
            </sql>
	</uninstall>
        <!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
                <!--
	<files folder="site">
		<filename>index.html</filename>
		<filename>shopmigrator.php</filename>
                <filename>controller.php</filename>
		<folder>models</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>views</folder>
	</files>
        -->
	<languages folder="language">
            <language tag="en-GB">admin/language/en-GB.com_shopmigrator.ini</language>
            <language tag="en-GB">admin/language/en-GB.com_shopmigrator.sys.ini</language>
        </languages>
	<administration>
            <!-- Administration Menu Section -->
           <menu img="components/com_shopmigrator/assets/images/shopmigrator.png" link="index.php?option=com_shopmigrator">ShopMigrator</menu>
            <files folder="admin">
                    <filename>index.html</filename>
                    <filename>config.xml</filename>
                    <filename>admin.shopmigrator.php</filename>
                    <filename>controller.php</filename>
                    <folder>views</folder>
                    <folder>controllers</folder>
                    <folder>classes</folder>
                    <folder>helpers</folder>
                    <folder>tables</folder>
                    <folder>assets</folder>
                    <folder>models</folder>
                    <folder>sql</folder>
            </files>
            <languages folder="language">
	       <language tag="en-GB">admin/language/en-GB.com_shopmigrator.ini</language>
               <language tag="en-GB">admin/language/en-GB.com_shopmigrator.ini</language>
	    </languages>
	</administration>
</install>